{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,

    /* Base URL for relative imports */
    "baseUrl": "."
  },

  /* Update include to find files in current dir (frontend root), not src */
  "include": ["./**/*.ts", "./**/*.tsx", "vite-env.d.ts"],

  /* Explicitly ignore build artifacts & Vite config */
  "exclude": [
    "node_modules",
    "dist",
    "vite.config.ts"
  ],

  "references": [{ "path": "./tsconfig.node.json" }]
}